{
  "name": "kyc-docx-mcp",
  "version": "1.0.0",
  "description": "MCP server for extracting structured KYC data from Mexican business documents using OpenAI GPT-5.1. Supports Acta Constitutiva, SAT Constancia, FM2, Telmex, CFE, and Bank Statements. Includes profile building, validation, and reporting.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mx-kyc-mcp": "./dist/mcp/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/kyc-docx-mcp.git"
  },
  "homepage": "https://github.com/yourusername/kyc-docx-mcp#readme",
  "bugs": {
    "url": "https://github.com/yourusername/kyc-docx-mcp/issues"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "check:model": "tsx src/index.ts",
    "test": "npm run test:kyc-pfds && npm run test:kyc-report-pfds && npm run test:mcp-pfds",
    "test:constancia": "tsx src/tests/testConstancia.ts",
    "test:cfe": "tsx src/tests/testCfeProofOfAddress.ts",
    "test:bank": "tsx src/tests/testBankStatements.ts",
    "test:acta": "tsx src/tests/testActaCompanyIdentity.ts",
    "test:kyc-builder": "tsx src/tests/testKycProfileBuilder.ts",
    "test:kyc-pfds": "tsx src/tests/testKycEndToEndPFDS.ts",
    "test:kyc-report-pfds": "tsx src/tests/testKycReportPFDS.ts",
    "test:mcp-pfds": "tsx src/tests/testMcpToolsPFDS.ts",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "keywords": [
    "kyc",
    "know-your-customer",
    "document-extraction",
    "mcp",
    "model-context-protocol",
    "openai",
    "gpt-5.1",
    "typescript",
    "mexican-documents",
    "compliance",
    "financial-services",
    "document-processing",
    "ai-extraction",
    "structured-data",
    "validation",
    "profile-building",
    "acta-constitutiva",
    "sat-constancia",
    "fm2",
    "bank-statements"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "openai": "^4.77.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
